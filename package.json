{
	"name": "controlforge-systems-website",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:analyze": "vite build --mode analyze",
		"build:prod": "NODE_ENV=production vite build --minify terser && pnpm compress:brotli",
		"compress:brotli": "node scripts/compress-brotli.cjs",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"lint:eslint": "eslint .",
		"lint:eslint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"validate": "./scripts/pre-deployment-check.sh",
		"prod:deploy": "pnpm prod:build && pnpm prod:deploy:copy && pnpm prod:deploy:run",
		"prod:build": "pnpm prebuild && pnpm build:prod",
		"prod:deploy:copy": "rsync -avz -e 'ssh' ./* homelab:~/ssd-2tb/apps/michael/controlforge-website --include-from='prod.deploy.files.txt' --exclude '*'",
		"prod:deploy:run": "ssh homelab 'cd ~/ssd-2tb/apps/michael/controlforge-website && docker compose -f prod.compose.yml up -d && docker restart controlforge-website'",
		"prebuild": "node scripts/generate-build-info.cjs",
		"postinstall": "node scripts/generate-build-info.cjs"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/kit": "^2.51.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"autoprefixer": "^10.4.18",
		"brotli": "^1.3.3",
		"eslint": "^10.0.0",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"postcss": "^8.4.36",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"rollup-plugin-visualizer": "^6.0.3",
		"shiki": "^3.22.0",
		"svelte": "^5.51.0",
		"svelte-check": "^4.4.0",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^3.4.1",
		"terser": "^5.42.0",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"vite": "^7.3.1",
		"vite-bundle-analyzer": "^1.3.6",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.1"
	}
}
